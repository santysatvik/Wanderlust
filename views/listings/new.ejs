<%layout("/layouts/boilerplate") %>
<body>
    <br><br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Create a new listings</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
        <!-- <div class="valid-feedback">looks good</div> -->
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name="listing[description]" cols="30" rows="10" placeholder="enter description" class="form-control" required></textarea>
        </div>
  
       
       <div class="mb-3">
        <label for="image">Upload Listing Image</label>
        <input name="listing[image]"  type="file" class="form-control" required>
       </div>
       
      <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price">Price</label>
        <input name="listing[price]" placeholder="enter price"  class="form-control" required>
        </div>
      
       <div class="mb-3 col-md-8">
        <label for="country">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
       </div>
      </div>
       
     <div class="mb-3">
        <label for="location">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
     </div>
     
        
        <button class="btn btn-dark add-btn mt-3 ">Add</button>
    </form>
</div>
</div>
</body>
