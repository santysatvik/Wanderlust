<%layout("/layouts/boilerplate") %>

    <h3>Edit your listings</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" value="<%= listing.title %>" required>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name="listing[description]" cols="30" rows="10" placeholder="enter description" class="form-control" required><%= listing.description %></textarea>
        </div>

        <div class="mb-3">
            <h4>Orignal Listing Image</h4>
            <img src="<%= orignalImageUrl %>" alt="" style="height: 200px; width: 300px;">
        </div>
  
       <div class="mb-3">
        <label for="image">Upload New Image</label>
        <input name="listing[image]"  type="file" class="form-control" value="<%=listing.image%>">
       </div>
       
      <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" value="<%= listing.price %>"required>
        </div>
      
       <div class="mb-3 col-md-8">
        <label for="country">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" value="<%=listing.country%>" required>
       </div>
      </div>
       
     <div class="mb-3">
        <label for="location">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" value="<%=listing.location%>" required>
     </div>
     
   
        <button class="btn btn-dark edit-btn mt-3 ">Edit</button>
    </form>
    
